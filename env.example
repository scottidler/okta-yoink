# Okta Token Automation Configuration
# Copy this file to .env and customize as needed

# URLs
HTTPBIN_URL=https://httpbin.ops.tatari.dev/headers

# Browser Settings
# Set to true to run browser in headless mode (no GUI)
HEADLESS=false

# Timeout in seconds for browser operations
BROWSER_TIMEOUT=60

# Implicit wait time in seconds for element finding
IMPLICIT_WAIT=10

# MFA timeout in seconds (how long to wait for user to complete MFA)
MFA_TIMEOUT=120

# Token Storage
# File path where the token will be saved
TOKEN_FILE=~/.okta-cookie

# Environment variable name for the token
TOKEN_ENV_VAR=OKTA_COOKIE

# User Credentials (optional)
# If set, username and password won't be prompted interactively
OKTA_USERNAME=
OKTA_PASSWORD=

# Browser Binary Paths (optional)
# Custom paths to Chrome binary and chromedriver
# Leave empty to use system defaults or auto-downloaded drivers
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location (defaults to ~/.local/share/okta-yoink/okta-yoink.log)
LOG_FILE=
